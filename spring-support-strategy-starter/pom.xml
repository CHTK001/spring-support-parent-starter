<?xml version="1.0" encoding="UTF-8"?>
<!--
    Spring Support Strategy Starter - 策略管理模块

    统一的策略管理模块，提供限流、熔断、降级、重试等策略的配置管理和 API 接口。
    
    主要功能：
    1. 限流策略（Rate Limiting） - API 接口访问频率控制
    2. 熔断策略（Circuit Breaker） - 防止级联故障
    3. 降级策略（Degradation） - 服务降级配置
    4. 重试策略（Retry） - 失败重试配置
    5. 舱壁隔离（Bulkhead） - 资源隔离配置
    6. 超时控制（Time Limiter） - 超时配置
    7. 策略记录 - 记录策略触发日志
    
    @author CH
    @version 1.0.0
    @since 2025-12-02
-->
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.chua</groupId>
        <artifactId>spring-support-parent-starter</artifactId>
        <version>4.0.0.34</version>
    </parent>

    <artifactId>spring-support-strategy-starter</artifactId>
    <description>策略管理模块 - 提供限流、熔断、降级等策略的配置管理和API接口</description>

    <properties>
        <maven.compiler.source>21</maven.compiler.source>
        <maven.compiler.target>21</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <dependencies>
        <!-- 通用功能模块 -->
        <dependency>
            <groupId>com.chua</groupId>
            <artifactId>spring-support-common-starter</artifactId>
        </dependency>

        <!-- 熔断降级模块 - 核心 Resilience4j 集成 -->
        <dependency>
            <groupId>com.chua</groupId>
            <artifactId>spring-support-circuit-breaker-starter</artifactId>
        </dependency>

        <!-- MyBatis Plus - 数据库操作 -->
        <dependency>
            <groupId>com.chua</groupId>
            <artifactId>spring-support-mybatis-starter</artifactId>
        </dependency>

        <!-- Swagger API 文档 -->
        <dependency>
            <groupId>com.chua</groupId>
            <artifactId>spring-support-swagger-starter</artifactId>
        </dependency>

        <!-- 数据源 -->
        <dependency>
            <groupId>com.chua</groupId>
            <artifactId>spring-support-datasource-starter</artifactId>
        </dependency>

    </dependencies>

</project>
